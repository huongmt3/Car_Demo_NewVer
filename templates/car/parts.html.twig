{# templates/car/parts.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Car Parts{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Car</h1>

        <div class="mb-3">
            <p><strong>Make:</strong> {{ car.make }}</p>
            <p><strong>Model:</strong> {{ car.model }}</p>
            <p><strong>Travelled Distance:</strong> {{ car.travelledDistance }} km</p>
        </div>

        <h2 class="mt-4 mb-3">Parts</h2>
        
        <div class="card">
            <div class="card-body">
                {% if car.parts|length > 0 %}
                    <ul class="list-group">
                        {% for part in car.parts %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ part.name }}
                                <span class="badge bg-primary rounded-pill">${{ part.price }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-center">No parts available for this car.</p>
                {% endif %}
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('car_index') }}" class="btn btn-secondary">Back to Car List</a>
        </div>
    </div>
{% endblock %}
